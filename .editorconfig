root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
line_length = 120
trim_trailing_whitespace = true

[*.js,*.json,*.css,*.scss,*.sass]
indent_style = space
indent_size = 2

[*.jinja,*.jinja2,*.html,*.htm,*.vue,*.svg]
indent_style = space
indent_size = 2

[*.txt,*.yml,*.yaml,*.conf,*.nginx]
indent_style = space
indent_size = 2

[*.c]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.md,*.rst]
indent_style = space
indent_size = 4
